# ============================================
# CRITICAL - MUST SET FIRST (Required)
# ============================================
# Get from: https://smith.langchain.com/settings
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=lsv2_pt_your_key_here
LANGCHAIN_PROJECT=ai-eos-production
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================
# LLM APIs (Get these now)
# ============================================
# Google Gemini - FREE tier (90% of queries)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Anthropic Claude - Paid (10% of queries, arbiter only)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_key_here
CLAUDE_MODEL=claude-3-7-sonnet-20250219

# OpenAI - Optional (fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# ============================================
# TOOLS (Get these in Week 3)
# ============================================
# Tavily web search - $50/mo for 1000 searches
# Get from: https://tavily.com/
TAVILY_API_KEY=your_tavily_key_here

# Cohere - Optional for reranking
COHERE_API_KEY=your_cohere_key_here

# ============================================
# LETTA SERVER (Setup in Week 1, Day 2-3)
# ============================================
LETTA_SERVER_URL=http://localhost:8283
LETTA_SERVER_PORT=8283

# ============================================
# DATABASES (Setup in Week 7)
# ============================================
# PostgreSQL - Supabase (checkpointing)
# Get from: https://supabase.com/
POSTGRES_URL=postgresql://user:pass@host:5432/db
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# Redis - Upstash (session state)
# Get from: https://upstash.com/
REDIS_URL=redis://default:pass@host:6379
REDIS_MAX_CONNECTIONS=50

# ============================================
# AGENT CONFIGURATION (Week 2+)
# ============================================
MAX_ITERATIONS=50
ENABLE_THINKING_TOOL=true
ENABLE_NODE_CACHING=true
ENABLE_DEFERRED_NODES=true
ENABLE_SLEEP_TIME_COMPUTE=true

# Model assignments per agent
MASTER_MODEL=claude-3-7-sonnet-20250219
ANALYST_MODEL=gemini-2.0-flash-exp
STRATEGIST_MODEL=gemini-2.0-flash-exp
CRITIC_MODEL=gemini-2.0-flash-exp

# ============================================
# COST CONTROL
# ============================================
USE_FREE_TIER_FOR_TESTS=true
USE_FREE_TIER_FOR_JUDGES=true
MAX_COST_PER_QUERY=0.50

# ============================================
# PERSIAN SUPPORT
# ============================================
DEFAULT_LANGUAGE=fa
PERSIAN_DATE_FORMAT=jalali
ENABLE_RTL=true

# ============================================
# DEPLOYMENT (Week 7+)
# ============================================
RAILWAY_TOKEN=
VERCEL_TOKEN=
DOMAIN_NAME=ai-eos.com

# ============================================
# MONITORING (Week 7+)
# ============================================
SENTRY_DSN=
POSTHOG_API_KEY=
